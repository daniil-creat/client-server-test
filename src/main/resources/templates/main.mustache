<html>
<body style="text-align: center">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
<div>
    <form action="/logout" method="post" style="text-align: right">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        <button type="submit" class="btn btn-primary">Sign Out</button>
    </form>

    <form method="post" action="/addTask">
        <input type="text" name="name" placeholder="Name task"/>
        <input type="text" name="text" placeholder="Text task"/>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        <button type="submit" class="btn btn-primary">Create task</button>
    </form>
</div>
<div style="text-align: center; padding-top: 50px">
    <table class="table table-bordered" style="text-align: center">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Text</th>
            <th scope="col">History</th>
            <th scope="col">Status</th>
        </tr>
        </thead>
        <tbody>
        {{#tasks}}
            <tr>
                <td style="white-space: pre-wrap; width: 5%">{{id}}</td>
                <td style="white-space: pre-wrap; width: 25%">{{name}}</td>
                <td style="white-space: pre-wrap; width: 25%">{{text}}</td>
                <td style="white-space: pre-wrap; width: 40%">{{history}}</td>
                <td style="white-space: pre-wrap; width: 5%">{{status}}</td>
            </tr>
        {{/tasks}}
        </tbody>
    </table>
</div>
<form method="get" action="/main">
    <input type="hidden" name="_csrf" value="{{_csrf.token}}">
    <button type="submit" class="btn btn-primary">Refresh table</button>
</form>
</body>
</html>

